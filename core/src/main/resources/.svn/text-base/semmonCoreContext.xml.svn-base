<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

  <context:annotation-config/>


  <bean id="coreServiceFacade" class="pl.edu.agh.semmon.core.impl.CoreServiceFacadeImpl">
    <property name="coreResourcesService" ref="coreResourcesService"/>
    <property name="measurementService" ref="coreMeasurementService"/>
    <property name="coreRemoteService" ref="coreRemoteService"/>
  </bean>


  <!-- Instances manager -->
  <bean id="coreResourcesService"
        class="pl.edu.agh.semmon.core.resource.CoreResourcesServiceImpl">
    <property name="knowledge" ref="knowledgeBean"/>
    <property name="transportProxiesManager" ref="transportProxiesManager"/>
    <property name="coreRemoteService" ref="coreRemoteService"/>
    <property name="coreMeasurementService" ref="coreMeasurementService"/>
  </bean>

  <bean id="coreRemoteService" class="pl.edu.agh.semmon.core.remote.CoreRemoteServiceImpl"/>

  <bean id="transportProxiesManager" class="pl.edu.agh.semmon.core.transport.TransportProxiesManagerImpl">
    <property name="transportProxies">
      <util:list id="transportProxies">
        <ref bean="jmxTransportProxy"/>
        <ref bean="ocmgTransportProxy"/>
      </util:list>
    </property>
  </bean>

  <bean id="coreMeasurementService" class="pl.edu.agh.semmon.core.measurement.CoreMeasurementServiceImpl">
    <property name="transportProxiesManager" ref="transportProxiesManager"/>
    <property name="coreRemoteService" ref="coreRemoteService"/>
    <property name="pollManager" ref="capabilityValuePollManager"/>
    <property name="coreResourcesService" ref="coreResourcesService"/>
  </bean>

  <bean id="capabilityValuePollManager" class="pl.edu.agh.semmon.core.measurement.CapabilityValuePollManagerQuartzImpl">
    <property name="coreMeasurementService" ref="coreMeasurementService"/>
  </bean>

  <!-- Knowledge Core Bean -->
  <bean id="knowledgeBean" class="pl.edu.agh.semmon.knowledge.impl.KnowledgeImpl">
    <property name="ontModelProvider" ref="ontModelProvider"/>
  </bean>

  <!-- Ontology model provider-->
  <bean id="ontModelProvider" class="pl.edu.agh.semmon.knowledge.ontology.OntModelProviderImpl"
        init-method="init">
    <property name="defaultOntology" value="semmon_2.owl"/>
  </bean>


</beans>