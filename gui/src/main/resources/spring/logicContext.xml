<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

  <context:annotation-config/>

  <bean id="resourcesService" class="pl.edu.agh.semmon.gui.logic.resource.ResourcesServiceImpl">
    <property name="uiFactory" ref="uiFactory"/>
    <property name="coreConnectionsManager" ref="coreConnectionsManager"/>
    <property name="resourcesListeners">
      <util:list>
        <ref bean="resourcesTabController"/>
      </util:list>
    </property>
  </bean>

  <bean id="measurementService" class="pl.edu.agh.semmon.gui.logic.metric.MeasurementServiceImpl">
    <property name="coreConnectionsManager" ref="coreConnectionsManager"/>
    <property name="measurementsListeners">
      <util:list>
        <ref bean="measurementsTabController"/>
      </util:list>
    </property>
  </bean>


  <bean id="coreConnectionsManager" class="pl.edu.agh.semmon.gui.logic.connection.CoreConnectionsManagerImpl">
    <property name="embeddedCoreConnection" ref="embeddedCoreConnection"/>
    <property name="resourceListeners">
      <util:list>
        <ref bean="resourcesService"/>
      </util:list>
    </property>
    <property name="measurementValuesListeners">
      <util:list>
        <ref bean="measurementService"/>
      </util:list>
    </property>
  </bean>

  <bean id="embeddedCoreConnection" class="pl.edu.agh.semmon.gui.logic.connection.EmbeddedCoreConnection">
    <property name="coreServiceFacade" ref="coreServiceFacade"/>
  </bean>


</beans>