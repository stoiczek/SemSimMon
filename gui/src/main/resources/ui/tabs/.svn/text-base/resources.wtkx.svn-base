<TablePane xmlns="org.apache.pivot.wtk" xmlns:effects="org.apache.pivot.wtk.effects"
           xmlns:wtkx="http://pivot.apache.org/wtkx"
           xmlns:content="org.apache.pivot.wtk.content"
           xmlns:smUtil="pl.edu.agh.semmon.gui.util"
           wtkx:id="resourcesPane"
           styles="{horizontalSpacing:4,showHorizontalGridLines:false, showVerticalGridLines:false}">
  <columns>
    <TablePane.Column wtkx:id="treeColumn" width="150" />
    <TablePane.Column width="1*"/>
  </columns>
  <rows>
    <TablePane.Row height="1*">
      <Border wtkx:id="treeBorder" styles="{padding:2}">
        <content>
          <ScrollPane horizontalScrollBarPolicy="fill_to_capacity" styles="{}">
            <view>
              <BoxPane wtkx:id="resourcesTreePaneWrapper" orientation="vertical"
                       styles="{fill:true,verticalAlignment:'bottom',horizontalAlignment:'center'}">
                <TreeView visible="false" wtkx:id="resourcesTree"/>
                <Label wtkx:id="noResourcesLabel" text="%tabs.resources.emptyTree"/>
              </BoxPane>
            </view>
          </ScrollPane>
        </content>
      </Border>

      <BoxPane orientation="vertical" styles="{fill:true}">
        <Label text="Resource details:"/>
        <Expander wtkx:id="resourceAttributesExpander" title="%tabs.resources.attributes">
          <content>
            <TablePane wtkx:id="resourceAttributes" styles="{padding:5}">
              <columns>
                <TablePane.Column width="240"/>
                <TablePane.Column width="1*"/>
              </columns>
              <rows>             
              </rows>
            </TablePane>
          </content>
        </Expander>
        <Expander wtkx:id="resourceCapabilitiesExpander" title="%tabs.resources.capabilities">
          <content>
            <TablePane styles="{padding:5}">
              <columns>
                <TablePane.Column width="1*"/>
                <TablePane.Column width="50"/>
              </columns>
              <rows>
                <TablePane.Row>


                  <TablePane wtkx:id="resourceCapabilities">
                    <columns>
                      <TablePane.Column width="240"/>
                      <TablePane.Column width="1*"/>
                    </columns>
                    <rows>
                    </rows>
                  </TablePane>

                  <BoxPane styles="{padding:5}">
                    <PushButton wtkx:id="refreshCapabilitiesButton">
                      <buttonData>
                        <smUtil:ButtonDataContainer text="%tabs.resources.refreshCapabilities"/>
                      </buttonData>
                    </PushButton>
                  </BoxPane>
                </TablePane.Row>
              </rows>
            </TablePane>
          </content>
        </Expander>
      </BoxPane>
    </TablePane.Row>
    <TablePane.Row height="-1">
      <FlowPane styles="{alignment:'center',padding:4}">
        <MenuButton>
          <buttonData>
            <smUtil:ButtonDataContainer text="%tabs.resources.add"/>
          </buttonData>
          <menu>
            <Menu>
              <sections>
                <Menu.Section>
                  <Menu.Item wtkx:id="addJmxResourceButton" buttonData="%tabs.resources.addjmx"/>
                  <Menu.Item wtkx:id="addOcmgResourceButton" buttonData="%tabs.resources.addocmg"/>
                </Menu.Section>
              </sections>
            </Menu>
          </menu>
        </MenuButton>


      </FlowPane>
      <FlowPane styles="{horizontalSpacing:8,alignment:'center',padding:4}">


        <PushButton wtkx:id="addMeasurementButton" enabled="false">
          <buttonData>
            <smUtil:ButtonDataContainer text="%tabs.resources.addmeasurement"/>
          </buttonData>
        </PushButton>
        <PushButton wtkx:id="pauseResumeButton" enabled="false">
          <buttonData>
            <smUtil:ButtonDataContainer text="%tabs.resources.pause"/>
          </buttonData>
        </PushButton>
        <PushButton wtkx:id="stopButton" enabled="false">
          <buttonData>
            <smUtil:ButtonDataContainer text="%tabs.resources.stop"/>
          </buttonData>
        </PushButton>
        <PushButton wtkx:id="removeResourceButton" enabled="false">
          <buttonData>
            <smUtil:ButtonDataContainer text="%tabs.resources.remove"/>

          </buttonData>
        </PushButton>


      </FlowPane>
    </TablePane.Row>
  </rows>


</TablePane>
